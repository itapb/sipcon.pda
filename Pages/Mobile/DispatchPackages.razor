    private void CloseDispatchPackages()
    {
        currentDispatch!.PackageId = 0;
        CurrentStep = Models.DispatchStep.GuideDetails;
    }
    private async Task ClickCloseGuides(MouseEventArgs args)
    {
        CloseDispatchPackages();
        await Task.CompletedTask;
    }
    private async Task AddScannedPackage(string? InputCode)
    {
        var result_NewPackage = await AddPackage(InputCode, currentDispatch?.GuideId, currentDispatch?.UserId);
        if (result_NewPackage!.IsSuccessStatusCode)
        {
            //var result = await DialogService.ShowDialog(Useful.OkSavedMessage, "Bulto en Guia", "OK", Color.Info, Icons.Material.Filled.Commit);
            mHelpText = "";
            if (PackagesMudDataGrid?.FilteredItems.Count() == 1)
                CloseDispatchPackages();
            else
                await PackagesMudDataGrid!.ReloadServerData();
        }else if (result_NewPackage.StatusCode == System.Net.HttpStatusCode.Conflict)
        {
            var conflictContent = await result_NewPackage.Content.ReadFromJsonAsync<WebApiResponse<Object?>>();           
            mHelpText = $"{conflictContent?.message!} {searchString.ToUpper()}";
            //await DialogService.ShowDialog(conflictContent?.message!.Replace("USP_POST_GUIDE_ADDPACKGE : ",""), "Error", "OK", Color.Error, Icons.Material.Filled.Error);
        }
        searchString = "";
        StateHasChanged();
        IsTextUpdateSuppression = true;

    }
    private async Task<HttpResponseMessage?> AddPackage(string? Code, int? GuideId, int? UserId) => await Http.PostAsync($"api/Packing/AddPackge?packageCode={Code}&guideId={GuideId}&userId={UserId}", null);

    private async Task ClickAddPackage(Models.Package item)
    {
        //var result_NewPackage = await Http.PostAsync($"api/Packing/AddPackge?packageCode={item.Code}&guideId={currentDispatch?.GuideId}&userId={currentDispatch?.UserId}", null);
        var result_NewPackage = await AddPackage(item.Code,currentDispatch?.GuideId,currentDispatch?.UserId);
        if (result_NewPackage!.IsSuccessStatusCode)
        {
            var result = await DialogService.ShowDialog(Useful.OkSavedMessage, "Bulto en Guia", "OK", Color.Info, Icons.Material.Filled.Commit);
            if (!result!.Canceled)
            {
                if (PackagesMudDataGrid?.FilteredItems.Count() == 1)
                    CloseDispatchPackages();
                else
                    await PackagesMudDataGrid!.ReloadServerData();
            }

        } 
        else if (result_NewPackage.StatusCode == System.Net.HttpStatusCode.Conflict)
        {
            var conflictContent = await result_NewPackage.Content.ReadFromJsonAsync<WebApiResponse<Object?>>();
            await DialogService.ShowDialog(conflictContent?.message!, "Error", "OK", Color.Error, Icons.Material.Filled.Error);
        }
    }   
    private async Task AddPackage()
    {
        IsTextUpdateSuppression = true;
        mHelpText = "Espere por favor...";
        await AddScannedPackage(searchString);
    }
    private async Task OnSearchClicK(MouseEventArgs args)
    {
        if (searchString.Length >= 3)
        {
            await AddPackage();
        }

    }
    private async Task CodeFieldOnKeyUp(KeyboardEventArgs args)
    {
        if (args.Key == "Enter" && searchString.Length >= 3)
        {
            await AddPackage();
        }
    }

}